{
  "compilerOptions": {
    "allowJs": true,
    "charset": "utf-8",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2020",
  },
  "include": [
    "./src/**/*.js"
  ]
}